<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fitness.Pages.RegistrationPage"
             xmlns:lang="clr-namespace:Fitness.Resources.Lenguages"
             Title="{x:Static lang:Localisation.Registration}">
    <VerticalStackLayout HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Padding="8" Spacing="8">
        <Entry x:Name="LoginEntry" Placeholder="{x:Static lang:Localisation.Login}"/>
        <Entry x:Name="PasswordEntry" IsPassword="True" Placeholder="********"/>
        <Button Text="{x:Static lang:Localisation.Register}" Clicked="Button_Clicked" HorizontalOptions="Center" Padding="8"/>
    </VerticalStackLayout>
</ContentPage>