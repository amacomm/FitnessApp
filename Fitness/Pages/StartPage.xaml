<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fitness.Pages.StartPage"
             xmlns:lang="clr-namespace:Fitness.Resources.Lenguages">
    <VerticalStackLayout Padding="8">
        <Label 
            Text="{x:Static lang:Localisation.Welcome}"
            VerticalOptions="FillAndExpand" 
            HorizontalOptions="Center" />
        <VerticalStackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Spacing="8">
            <Button Text="{x:Static lang:Localisation.Login}" Clicked="Button_Login_Clicked"/>
            <Button Text="{x:Static lang:Localisation.Registration}" Clicked="Button_Registration_Clicked" BorderColor="{StaticResource Primary}" BorderWidth="1" BackgroundColor="{StaticResource background}" TextColor="{StaticResource Primary}" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>